@model NewRestaurantAPI.Models.Entities.Customer

@{ //loop through the meals and show them.
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservationNumber)
        </dd>
    </dl>
</div>
<div>
  




    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a> |
    
    <a asp-action="Index" asp-controller="transactions" asp-route-id="@Model!.Id"> See transactions</a> |
    <a asp-action="Index" asp-controller="CustomerFood"> Customer's Food Review </a> |
    <a asp-action="OrderFood" asp-controller="Food" asp-route-id="@Model!.Id">Order Food</a>
   
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Food name
            </th>
            <th>
                Food Description
            </th>
            <th>
                Food Ingredients
            </th>
        </tr>
    </thead>
<tbody> 
   @if (Model != null)
    {
        @foreach(var item in Model.CustomersFood)
        {
            <tr>


                <td>
                    @item.food!.FoodName
                </td>
                <td>
                    @item.food!.Description
                </td>
                <td>
                    @item.food!.Ingredients
                </td>
                <td>
                        @item.menuItem
                </td>

                <td>
                        <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="popover"
                                title="Review Meal" data-bs-content="Come and review the food"></button>
                                <form>
                    <a asp-action="CustomerMeal" asp-controller="CustomerFood"
                       asp-route-customerid="@Model!.Id" asp-route-foodId="@item.FoodId">
                        Review Meal
                    </a>
                        </form>

                </td>

            </tr>
        }
    }

</tbody>
</table>
 